{
    "name": "like/json",
    "type": "library",
    "description": "Biblioteca para manipulação JSON.",
    "repositories": [
        {"type": "composer", "url": "https://br.composer.likesistemas.com.br/"}
    ],
    "require": {
        "php": "^5.3 || ^7.1",
        "ext-json": "*",
        "like/encoding": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Like\\Json\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Like\\Json\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Like Sistemas",
            "email": "dev@likesistemas.com.br",
            "homepage": "https://www.likesistemas.com.br/"
        }
    ]
